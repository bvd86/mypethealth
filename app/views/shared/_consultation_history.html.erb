<div id="recent-consultations-container">
  <h3>Recent Consultations</h3>

  <div>
    <% @user.consultations.each do |c| %>
      <div class="d-flex gap-2 my-2">
        <%= cl_image_tag c.pet.photo.key, alt: c.pet.name, class:"avatar", style:"height: 50px" %>
        <div>
          <%= link_to consultation_path(c) do %>
            <p>Consulted with Dr. <%= User.find(c.vet_id).name %></p>
          <% end %>
          <p><%= c.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
