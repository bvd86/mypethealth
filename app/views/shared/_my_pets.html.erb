<div style="display:flex; justify-content: space-between;">
  <h1>My pets</h1>
  <%= link_to "âž• Add a pet", new_user_pet_path(@user) %>
</div>

<% @user.pets.each do |p| %>
<p>Name: <%= p.name %></p>
<p>Species: <%= p.species %></p>
<p>Breed: <%= p.breed %></p>
<%= cl_image_tag p.photo.key, alt: p.species, height: 200, width: 200 if p.photo.attached? %> <br>
<%= link_to "Edit info", edit_user_pet_path(@user, p.id) %> <br>
<%= link_to "Consultation history", user_pet_consultations_path(@user, p.id) %>
<p>----------------------------</p>
<% end %>
