<div class="mt-4 mb-3 d-flex gap-2 align-items-end">
  <h3 class="mb-0">My pets</h3>
  <%= link_to new_user_pet_path(@user) do %>
    <i class="fa-solid fa-circle-plus icon-add"></i>
  <% end %>
</div>

<% if @user.pets.empty? %>
  <p class="small-font">You have not added any pets yet.</p>
<% else %>
  <div class="row row-cols-2 row-cols-md-3 g-4">
    <% @user.pets.each do |p| %>
      <div class="col">
        <div class="card h-100">
        <!-- Pet's photo -->
          <% if p.photo.attached? %>
          <%= cl_image_tag p.photo.key, alt: p.name, class:"card-img-top" %>
          <% else %>
            <%= image_tag "pet-avatar.png", alt: "Default picture for pet", class:"card-img-top" %>
          <% end %>
          <!-- Pet's info -->
          <div class="card-body">
            <div class="d-flex gap-2">
              <h5 class="card-title"><%= p.name %></h5>
              <!-- Link to edit pet info -->
              <p><%= link_to edit_user_pet_path(@user, p.id) do %>
                <i class="fa-solid fa-pencil edit-pen"></i>
              <% end %></p>
              <!-- Link to Consultation history-->
              <%= link_to user_pet_consultations_path(@user, p.id) do %>
                <i class="fa-solid fa-book-medical icon-history"></i>
              <% end %>
            </div>
            <p class="card-text mb-0"><%= p.species %></p>
            <p class="card-text"><%= p.breed %></p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
