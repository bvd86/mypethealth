 <% if current_user.pets.count == 0 %>
 <h3 style="color:#548088;">Please add a pet to consult a veterinarian</h3>

   <%= simple_form_for [ @user, @pet ] do |f| %>
        <%= f.input :name %>
        <%= f.input :species, collection: Pet::SPECIES %>
        <%= f.input :breed %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-grad" %>
    <% end %>
 <% else %>
  <%= simple_form_for [ @user, @pet ] do |f| %>
        <%= f.input :name %>
        <%= f.input :species, collection: Pet::SPECIES %>
        <%= f.input :breed %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-grad" %>
    <% end %>
  <% end %>
