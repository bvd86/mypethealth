<div class="container">
  <div class="row py-4">
    <div class="col-md-3">
      <% if @consultation.pet.photo.attached? %>
        <%= cl_image_tag @consultation.pet.photo.key, alt: @consultation.pet.name, class:"card-img-top" %>
      <% else %>
        <%= image_tag "pet-avatar.png", alt: "Default picture for pet", class:"card-img-top" %>
      <% end %>
    </div>
    <div class="col payment-form">
      <h2>Checkout summary</h2>
      <hr>
      <p>Consultation for <strong><%= @consultation.pet.name %></strong> <br>
      <p>Total :<strong><%= humanized_money_with_symbol @consultation.price %></strong></p>

      <button id="pay" class="btn btn-primary pay-btn">Checkout</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @consultation.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
