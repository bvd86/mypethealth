<h1>My Profile</h1>

<div class="row g2">
  <%# Email %>
  <p class="col-4"><strong>Email:</strong> <%= @user.email %></p>

  <%# Name & Specialties %>
  <% if @user.specialties.count > 0 %>
    <p class="col-2"><strong>Name:</strong> Dr. <%= @user.name %></p>
    <p class="col-4"><strong>Specialties:</strong>
      <% @user.specialties.each do |s| %>
        <%= s.name %>
      <% end %></p>
  <% else %>
    <p class="col-6"><strong>Name:</strong> <%= @user.name %></p>
  <% end %>

  <%# Address & Picture %>
  <p class="col-6"><strong>Address:</strong> <%= @user.address %></p>
  <%= cl_image_tag @user.photo.key, height: 200, width: 200 if current_user.photo.attached?%>

  <%# Availability %>
  <% if @user.specialties.count > 0 %>
    <p class="col-6"><strong>Your current status is:</strong>
      <% if @user.available %>
        Available. <%= link_to "Make me unavailable", make_unavailable_path, method: :patch, class: "btn btn-warning" %>
      <% else %>
        Unavailable. <%= link_to "Make me available", make_available_path, method: :patch, class: "btn btn-success" %>
      <% end %>
    </p>

  <% end %>
</div>


<%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-primary" %>

