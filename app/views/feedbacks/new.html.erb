FEEDBACK FORM
<% stars = 1..5 %>
 <%= simple_form_for [ @consultation, @feedback ] do |f| %>
      <%= f.input :rating, collection: stars %>
      <%= f.input :vet_rating, collection: stars %>
      <%= f.input :friend_rating, collection: stars %>
      <%= f.input :comment %>
      <%= f.submit class: "btn btn-grad" %>
  <% end %>

<%= link_to "Skip feedback", receipt_path(@consultation) %>
